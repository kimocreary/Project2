extends ./layouts/template.pug

block content
  h2 Sign Up Form
    form.signup
      .form-group
        label(for='exampleInputEmail1') Email address
        input#email-input.form-control(type='email' placeholder='Email')
      .form-group
        label(for='exampleInputPassword1') Password
        input#password-input.form-control(type='password' placeholder='Password')
    #alert.alert.alert-danger(style='display: none' role='alert')
    span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
    span.sr-only Error:
    span.msg
    button.btn.btn-default(type='submit') Sign Up
    br
    p Or log in
      a(href='/login') here

