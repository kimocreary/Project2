mixin list(name, ...items)
  ul
    each item in items
      li= item

mixin table(name, cols, rows, datas)
  table.table(id=name)
    thead
      tr
        each col in cols
          th(scope="col")= col
    tbody
      each row in rows
        tr
          th(scope="row")= row
          each data in datas
            td= data
