mixin card(title, text, link)
  .card(style="width: 18rem")
    h5.card-header= title
    .card-body
      p.card-text= text
      a.btn.btn-primary(href="#")= link

//- Add icon
mixin icon(iconName)
  i.material-icons&attributes(attributes)= iconName

//- add icon with drop down
mixin iconDropdown(iconName, ...links)
  .dropdown
    +icon(iconName)(data-toggle="dropdown")
    .dropdown-menu
      each link in links
        a.dropdown-item(href="/"+link)= link

mixin iconBtn(iconName, link)
  button.btn.btm-btn-icon
    a(href="/"+link)
      +icon(iconName)

mixin modal(modalName)
  button.btn.btn-primary(type="button" data-toggle="modal" data-target="#"+modalName) launch
  .modal.fade(id=modalName tabindex="-1" role="dialog" aria-labelledby=modalName+"Title" aria-hidden="true")
    .modal-dialog.modal-dialog-centered(role="document")
      .modal-content
        .modal-header
          h5.modal-title(id=modalName+"Title")= modalName
          button.close(type="button" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
        .modal-body
          //- +form()
        .modal-footer
          button.btn.btn-primary Submit

